<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usercimd.campapp.MainActivity">

    <TextView
        android:id="@+id/NombreInicial"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="40sp"
        android:textAllCaps="true"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/Logo"
        android:layout_below="@+id/NombreInicial"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/MensajeBienvenida"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Creando lazos entre los cultivadores y el cliente Final"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_below="@+id/MensajeBienvenida">

    <Button
        android:layout_marginTop="60dp"
        android:id="@+id/Registrate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Registrate"
     />

        <Button
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/Registrate"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Ingresar"/>
    </LinearLayout>
</RelativeLayout>
